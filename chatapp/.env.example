# Configuration Django
SECRET_KEY=your_secret_key_here
DEBUG=True

# Domaines et hôtes autorisés (séparés par des virgules)
ALLOWED_HOSTS=127.0.0.1,localhost,yourdomain.com,your.ip.address

# URLs de confiance CSRF (séparées par des virgules)
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://yourdomain.com

# Configuration des cookies
CSRF_COOKIE_DOMAIN=.yourdomain.com
SESSION_COOKIE_DOMAIN=.yourdomain.com

# Configuration Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# Origines WebSocket autorisées (séparées par des virgules)
WEBSOCKET_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://yourdomain.com

# Configuration de sécurité
USE_X_FORWARDED_HOST=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
CSRF_COOKIE_SAMESITE=Lax
